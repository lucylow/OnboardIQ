# OnboardIQ Enhanced AI-Powered Multi-Channel Customer Onboarding & Security Suite
# Environment Configuration Example

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/onboardiq
REDIS_URL=redis://localhost:6379

# =============================================================================
# COMMUNICATION API CONFIGURATION
# =============================================================================
COMMUNICATION_API_KEY=your_communication_api_key
COMMUNICATION_API_SECRET=your_communication_api_secret
COMMUNICATION_APPLICATION_ID=your_communication_application_id
COMMUNICATION_PRIVATE_KEY_PATH=./private.key

# Communication Video API
COMMUNICATION_VIDEO_API_KEY=your_communication_video_api_key
COMMUNICATION_VIDEO_API_SECRET=your_communication_video_api_secret

# Communication Verify API
COMMUNICATION_VERIFY_BRAND=OnboardIQ
COMMUNICATION_VERIFY_CODE_LENGTH=6
COMMUNICATION_VERIFY_LANGUAGE=en-us

# Communication Insights API (for SIM swap detection)
COMMUNICATION_INSIGHTS_API_KEY=your_communication_insights_api_key
COMMUNICATION_INSIGHTS_API_SECRET=your_communication_insights_api_secret

# =============================================================================
# DOCUMENT API CONFIGURATION
# =============================================================================
DOCUMENT_CLIENT_ID=your_document_client_id
DOCUMENT_CLIENT_SECRET=your_document_client_secret
DOCUMENT_BASE_URL=https://api.document-service.com
DOCUMENT_TEMPLATE_BASE64=base64_encoded_template_file

# Document Generation API
DOCUMENT_DOC_GEN_ENDPOINT=/document-generation/api/GenerateDocumentBase64
DOCUMENT_PDF_SERVICES_ENDPOINT=/pdf-services/api

# Document eSign API
DOCUMENT_ESIGN_ENDPOINT=/esignature/api
DOCUMENT_ESIGN_WORKFLOW_EXPIRATION_DAYS=30

# =============================================================================
# INTEGRATION PLATFORM AI CONFIGURATION
# =============================================================================
INTEGRATION_PLATFORM_BASE_URL=https://api.integration-platform.com
INTEGRATION_PLATFORM_ACCESS_TOKEN=your_integration_platform_access_token
INTEGRATION_PLATFORM_ORG_ID=your_integration_platform_org_id
INTEGRATION_PLATFORM_ENV_ID=your_integration_platform_env_id
MCP_SERVER_URL=http://localhost:3002
MCP_SERVER_PORT=3002

# Integration Platform AI Endpoints
INTEGRATION_PLATFORM_AI_BEHAVIOR_ANALYSIS=/ai/behavior-analysis
INTEGRATION_PLATFORM_AI_RECOMMENDATIONS=/ai/recommendations
INTEGRATION_PLATFORM_AI_TRACK_ACTION=/ai/track-action
INTEGRATION_PLATFORM_AI_USER_INSIGHTS=/ai/user-insights

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=welcome@onboardiq.com
SMTP_SECURE=false

# Email Templates
EMAIL_WELCOME_TEMPLATE_ID=welcome_template
EMAIL_VERIFICATION_TEMPLATE_ID=verification_template
EMAIL_SECURITY_ALERT_TEMPLATE_ID=security_alert_template

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Security Thresholds
RISK_THRESHOLD_LOCATION_MISMATCH=0.7
RISK_THRESHOLD_DEVICE_CHANGE=0.6
RISK_THRESHOLD_TIME_ANOMALY=0.5
RISK_THRESHOLD_BEHAVIOR_CHANGE=0.8

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# AI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AI Behavior Analysis
AI_BEHAVIOR_CACHE_TTL=300000
AI_RECOMMENDATION_CACHE_TTL=600000
AI_LEARNING_RATE=0.1

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your_analytics_tracking_id
ANALYTICS_SAMPLE_RATE=1.0

# Real-time Analytics
REALTIME_ANALYTICS_ENABLED=true
REALTIME_UPDATE_INTERVAL=30000

# =============================================================================
# MULTI-LANGUAGE SUPPORT
# =============================================================================
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE,pt-BR,ja-JP,ko-KR,zh-CN

# Localization
LOCALIZATION_FALLBACK=en-US
LOCALIZATION_CACHE_TTL=3600000

# =============================================================================
# DOCUMENT MANAGEMENT
# =============================================================================
DOCUMENT_STORAGE_PATH=./generated-docs
DOCUMENT_TEMPLATE_PATH=./templates
DOCUMENT_MAX_SIZE=10485760
DOCUMENT_ALLOWED_TYPES=pdf,docx,doc

# Document Security
DOCUMENT_ENCRYPTION_ENABLED=true
DOCUMENT_WATERMARK_ENABLED=true
DOCUMENT_COMPRESSION_ENABLED=true

# =============================================================================
# GAMIFICATION CONFIGURATION
# =============================================================================
GAMIFICATION_ENABLED=true
GAMIFICATION_POINTS_PER_ACTION=10
GAMIFICATION_BADGES_ENABLED=true
GAMIFICATION_LEADERBOARD_ENABLED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_PUSH_ENABLED=true
NOTIFICATION_WEBHOOK_ENABLED=true

# Notification Channels
NOTIFICATION_CHANNELS=sms,email,push,webhook
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600000
CACHE_MAX_SIZE=1000

# Redis Cache
REDIS_CACHE_ENABLED=true
REDIS_CACHE_TTL=3600
REDIS_CACHE_PREFIX=onboardiq:

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
DEBUG_ENABLED=false
MOCK_API_ENABLED=false
TEST_MODE=false

# Test Data
TEST_USER_EMAIL=test@onboardiq.com
TEST_USER_PHONE=+1234567890
TEST_COMPANY_NAME=Test Company

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_REGION=us-east-1

# Cloud Configuration
CLOUD_PROVIDER=aws
CLOUD_REGION=us-east-1
CLOUD_AVAILABILITY_ZONE=us-east-1a

# =============================================================================
# INTEGRATION WEBHOOKS
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# External Integrations
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ADAPTIVE_ONBOARDING=true
FEATURE_CONTINUOUS_MONITORING=true
FEATURE_AI_CHATBOT=true
FEATURE_GAMIFICATION=true
FEATURE_MULTI_LANGUAGE=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_NOTIFICATIONS=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# COMPLIANCE & GOVERNANCE
# =============================================================================
GDPR_COMPLIANCE_ENABLED=true
HIPAA_COMPLIANCE_ENABLED=false
SOC2_COMPLIANCE_ENABLED=true

# Data Retention
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# =============================================================================
# API VERSIONING
# =============================================================================
API_VERSION=v1
API_DEPRECATION_WARNING_DAYS=90
API_RATE_LIMIT_ENABLED=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
